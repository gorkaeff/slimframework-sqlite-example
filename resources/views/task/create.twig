{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Create task</div>
				<div class="panel-body">
					<form action="{{ path_for('tasks.store') }}" method="POST" autocomplete="off">
						<div class="form-group">
							<label for="name">Task Name</label>
							<input class="form-control" type="text" name="name" id="name">
						</div>
						<div class="form-group">
							<label for="completed">Completed</label>
							<input class="form-control" type="text" name="completed" id="completed">
						</div>
						<button type="submit" class="btn btn-default">Create task</button>
						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}