{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Update task</div>
				<div class="panel-body">
					<form action="{{ path_for('tasks.update', {'id':data.task.id}) }}" method="POST">
                        <input type="hidden" name="_METHOD" value="PUT"/>
						<div class="form-group">
							<label for="name">Task Name</label>
							<input class="form-control" type="text" name="name" id="name" value="{{data.task.name}}">
						</div>
						<div class="form-group">
							<label for="completed">Completed</label>
							<input class="form-control" type="text" name="completed" id="completed" value={{data.task.completed}}>
						</div>
						<button type="submit" class="btn btn-default">Update task</button>
						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}